                actionsDiv.innerHTML = `
                    <!--<button class="npc-action-button regen" title="Regenerate Image" onclick="regenerateNPCImage(event, ${npc.id})">‚ü≥</button>-->
                    <button class="npc-action-button talk" title="Talk" onclick="talkToNPC(event, ${npc.id})">üí¨</button>
                    <button class="npc-action-button trade" title="Trade" onclick="tradeWithNPC(event, ${npc.id})">üîÑ</button>
                    <button class="npc-action-button fight" title="Fight" onclick="fightNPC(event, ${npc.id})">‚öîÔ∏è</button>
                `;
                
                npcWrapper.appendChild(npcElement);
